    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Combine PDFs Window Mode",
            "type": "python",
            "request": "launch",
            "program": "combine.py",
            "args": [
                "${workspaceFolder}",
                "output.pdf",
                "-w"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }        
    ]
}